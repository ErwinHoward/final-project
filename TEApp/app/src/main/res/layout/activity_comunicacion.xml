<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComunicacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textComunicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/comunicacion"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_red"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/nina_comida" />

            <TextView
                android:id="@+id/textComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_red"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/nina_comida"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageDespertando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/nino_despertando" />

            <TextView
                android:id="@+id/textDespertando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/nino_despertando"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageDurmiendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_green"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/nino_durmiendo" />

            <TextView
                android:id="@+id/textDurmiendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_green"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/nino_durmiendo"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageDientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/ninos_dientes" />

            <TextView
                android:id="@+id/textDientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/ninos_dientes"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageTomando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_orange"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/ninos_tomando" />

            <TextView
                android:id="@+id/textTomando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_orange"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/ninos_tomando"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageCorriendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:onClick="Sonido_comunicacion"
                app:srcCompat="@drawable/nino_corriendo" />

            <TextView
                android:id="@+id/textCorriendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:gravity="center"
                android:onClick="Sonido_comunicacion"
                android:text="@string/nino_corriendo"
                android:textSize="48sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>